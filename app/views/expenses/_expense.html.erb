<style>
  .action {
    padding: 5px;
    text-decoration: none;
    color: black;
  }
  .update-hover:hover {
    color: blue;
  }

  .delete-hover:hover {
    color: red;
  }
</style>

<%= turbo_frame_tag expense do%>
  <div class="row">
    <div class="col-3"><%= expense.particular %></div>
    <div class="col-3"><%= expense.amount %></div>
    <div class="col-3"><%= expense.remark %></div>
    <div class="col-3">
      <div class="row">
        <div class="col-1">
          <%= button_to edit_expense_path(expense), method: :get, class:"btn btn-link action" do %>
          <i class="bi bi-pencil update-hover"></i>
          <% end %>
        </div>
        <div class="col-1">
          <%= button_to expense, method: :delete, class:"btn btn-link action" do %>
          <i class='bi bi-trash3 delete-hover'></i>
          <%end%>
        </div>
      </div>
    </div>
  </div>
  <% end %>
